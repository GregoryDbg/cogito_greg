<div class="intro" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.4) 50%), url('classroom.jpg');">
  <h1>Quizz Analysis</h1>
  <h3>Select a classroom</h3>
</div>

<div class="container">
  <div class="row">
    <% @classrooms.each do |classroom| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= link_to classroom_path(classroom) do %>
          <div class="classroom_card shadow-z-1">
          <div><%= classroom.name%></div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>



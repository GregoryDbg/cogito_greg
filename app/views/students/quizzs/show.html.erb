<h1><%= @quizz.subject.upcase %></h1>
<h2><%= @quizz.name %></h2>

<% @quizz.cards.each do |card| %>
  <p><strong><%= card.question %></strong></p>
  <p><%= card.question %></p>

  <%= simple_form_for [card, @student_evaluation], remote: true do |f| %>
    <%= f.input :status, as: :hidden, input_html: { value: :bad } %>
    <%= f.submit 'bad'  %>
  <% end %>

  <%= simple_form_for [card, @student_evaluation], remote: true do |f| %>
    <%= f.input :status, as: :hidden, input_html: { value: :soso } %>
    <%= f.submit 'soso'  %>
  <% end %>

  <%= simple_form_for [card, @student_evaluation], remote: true do |f| %>
    <%= f.input :status, as: :hidden, input_html: { value: :good } %>
    <%= f.submit 'good'  %>
  <% end %>
<% end %>
